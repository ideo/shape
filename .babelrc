{
  "presets": [
    [
      "env",
      {
        "test": {
          "modules": "commonjs"
        },
        "development": {
          "modules": false
        },
        "production": {
          "modules": false
        },
        "targets": {
          "uglify": true
        },
        "useBuiltIns": true
      }
    ],
    "react"
  ],
  "plugins": [
    "lodash",
    "syntax-dynamic-import",
    "transform-decorators-legacy",
    "transform-object-rest-spread",
    "transform-class-properties",
    [
      "module-resolver",
      {
        "extensions": [".js", ".jsx", ".ts", ".tsx"],
        "alias": {
          "~shared": "./app/javascript/ui/shared",
          "~": "./app/javascript",
          "^~(.+)": "./app/javascript/src/\\1",
          "#": "./__js_test_config"
        }
      }
    ],
    [
      "transform-runtime",
      {
        "helpers": false,
        "polyfill": false,
        "regenerator": true
      }
    ],
    [
      "transform-class-properties",
      {
        "spec": true
      }
    ]
  ],
  "env": {
    "development": {
      "plugins": [
        [
          "babel-plugin-styled-components",
          {
            "fileName": false
          }
        ]
      ]
    },
    "production": {
      "plugins": [
        "lodash",
        [
          "styled-components",
          {
            "displayName": false
          }
        ]
      ]
    }
  }
}
